<div class="container mt-5 min-vh-100">
  <div class="row justify-content-center">
    <div class="col-md-6 container bg-white p-5 rounded-4 shadow">
      <h2>Sign up</h2>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>
        <%= f.error_notification %>

        <div class="form-group mt-2">
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { class: 'form-control', autocomplete: "email" },
                      wrapper: false,
                      label_html: { class: 'form-label' } %>
        </div>

        <div class="form-group mt-3">
          <%= f.input :password,
                      required: true,
                      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      input_html: { class: 'form-control', autocomplete: "new-password" },
                      wrapper: false,
                      label_html: { class: 'form-label' } %>
        </div>

        <div class="form-group mt-3">
          <%= f.input :password_confirmation,
                      required: true,
                      input_html: { class: 'form-control', autocomplete: "new-password" },
                      wrapper: false,
                      label_html: { class: 'form-label' } %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Sign up", class: 'btn btn-primary mt-3' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
